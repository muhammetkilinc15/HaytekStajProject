<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <%- include("../partials/head")  %> 
    <style>
        body {
            background-color: #f8f9fa; /* Sayfanın arka plan rengi */
        }
        .form-container {
            max-width: 400px; /* Form genişliği */
            margin: auto; /* Ortala */
            padding: 20px; /* İç boşluk */
            background-color: #ffffff; /* Form arka plan rengi */
            border-radius: 8px; /* Kenar yuvarlama */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Gölgelendirme */
        }
    </style>
</head>
<body>   
    <%- include("../partials/nav")  %> 
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                
                <% if (typeof message !== "undefined") { %>
                    <div class="alert alert-<%= message.class %>">
                        <%= message.text %>
                    </div>
                <% } %>

                <div class="form-container">


                    <div class="text-center mb-4">
                        <h4><i class="fas fa-sign-in-alt"></i> HaytekHub Giriş Sayfası</h4>

                        <p class="text-muted">Lütfen aşağıdaki bilgileri doldurun.</p>
                    </div>


                    <form method="post" action="/account/login">
                        
                        <!-- Email or Username field with icon -->
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">
                                <i class="fas fa-user"></i>
                            </span>
                            <input type="text" class="form-control" id="emailOrUsername" name="emailOrUsername" placeholder="Email veya Kullanıcı Adı" aria-label="Email veya Kullanıcı Adı" aria-describedby="basic-addon1" required>
                        </div>

                        <!-- Password field with icon -->
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon2">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Şifre" aria-label="Şifre" aria-describedby="basic-addon2" required>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Oturum Aç</button>
                        </div>

                        <div class="text-center mt-3">
                            <a href="/account/forgot-password" class="btn btn-link">Parola Sıfırla <i class="fas fa-arrow-right"></i></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
