<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <%- include("../partials/head")  %> 
    <style>
        body {
            background-color: #f8f9fa; /* Sayfanın arka plan rengi */
        }
        .form-container {
            max-width: 400px; /* Form genişliği */
            margin: auto; /* Ortala */
            padding: 20px; /* İç boşluk */
            background-color: #ffffff; /* Form arka plan rengi */
            border-radius: 8px; /* Kenar yuvarlama */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Gölgelendirme */
        }
    </style>
</head>
<body>   
    <%- include("../partials/nav")  %> 
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                
                <% if (typeof message !== "undefined") { %>
                    <div class="alert alert-<%= message.class %>">
                        <%= message.text %>
                    </div>
                <% } %>

                <div class="form-container">
                    <div class="text-center mb-4">
                        <h4><i class="fas fa-lock"></i> Şifremi Unuttum</h4>
                        <p class="text-muted">Şifrenizi sıfırlamak için e-posta adresinizi girin.</p>
                    </div>

                    <form method="post" action="/account/forgot-password">
                        
                        <!-- Email field with icon -->
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">
                                <i class="fas fa-envelope"></i>
                            </span>
                            <input type="email" class="form-control" id="email" name="email" placeholder="E-posta adresinizi girin" aria-label="E-posta" aria-describedby="basic-addon1" required>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Parola Sıfırla</button>
                        </div>

                        <div class="text-center mt-3">
                            <a href="/account/login" class="btn btn-link"><i class="fas fa-arrow-left"></i> Giriş Sayfasına Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
