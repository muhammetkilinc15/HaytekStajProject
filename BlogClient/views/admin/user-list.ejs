<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body>
    
    <%- include("../partials/nav")  %> 

    <div class="container mt-3">
          <div class="row">
            <div class="col-md-12 mt-3">           
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">ID</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th style="width: 130px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% usersInfo.forEach(user => { %>
                            <tr>
                                <td>#<%= user.id %></td>
                                <td>
                                    <%= user.firstName + ' ' + user.lastName %> <!-- Full Name için boşluk eklendi -->
                                </td>
                                <td>
                                    <%= user.email %> 
                                </td>
                                <td>
                                    <% user.roles.forEach(role => { %>
                                        <%= role.roleName %> <br>
                                    <% }) %>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="/admin/users/<%= user.id %>">Edit</a>
                                    <a class="btn btn-sm btn-danger" href="/admin/users/delete/<%= user.id %>">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
          </div>
    </div>
</body>
</html>
