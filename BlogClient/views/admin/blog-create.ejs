<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
    <title>Blog Oluştur</title>
</head>
<body>
    
    <%- include("../partials/nav")  %> 

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <h2>Blog Oluştur</h2>
                <form method="post" enctype="multipart/form-data" action="/admin/blog/create">
                    <div class="row mb-3">
                        <label for="title" class="col-sm-2 col-form-label">Başlık</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="title" name="title" placeholder="Blog başlığını girin">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="subtitle" class="col-sm-2 col-form-label">Alt Başlık</label>
                        <div class="col-sm-8">
                            <textarea name="subtitle" class="form-control" rows="5" placeholder="Blog alt başlığını girin"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="description" class="col-sm-2 col-form-label">Açıklama</label>
                        <div class="col-sm-8">
                            <textarea id="editor" name="content" class="form-control" rows="10" placeholder="Blog açıklamasını girin"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="image" class="col-sm-2 col-form-label">Resim Yükle</label>
                        <div class="col-sm-8">
                            <input type="file" class="form-control" id="image" name="image">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="mainPage" name="mainPage">
                            <label class="form-check-label" for="mainPage">
                                Anasayfada Göster
                            </label>
                          </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="isApproved" name="isApproved">
                            <label class="form-check-label" for="isApproved">
                                Yayın Onayı
                            </label>
                          </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                          <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
       
    <script src="https://cdn.ckeditor.com/ckeditor5/35.0.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .catch( error => {
                console.error( error );
            } );
    </script>
</body>
</html>
