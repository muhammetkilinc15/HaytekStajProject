<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head") %> 
</head>
<body>
    
    <%- include("../partials/nav") %> 

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <div class="card card-body">
                    <form method="post">
                        <!-- Hidden User ID -->
                        <input type="hidden" name="userid" value="<%= userInfo.id %>">

                        <!-- Full Name Field (Concatenated firstName + lastName) -->
                        <div class="row mb-3">
                            <label for="fullName" class="col-sm-2 col-form-label">Full Name</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="fullName" name="fullName" 
                                       value="<%= userInfo.firstName + ' ' + userInfo.lastName %>" disabled>
                            </div>
                        </div>

                        <!-- Email Field -->
                        <div class="row mb-3">
                            <label for="email" class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="email" name="email" value="<%= userInfo.email %>">
                            </div>
                        </div>

                        <!-- Roles Field -->
                        <div class="row mb-3">
                            <label for="roles" class="col-sm-2 col-form-label">Roles</label>
                            <div class="col-sm-8">
                                <% roles.forEach(role => { %>
                                    <div class="form-check">
                                        <!-- Checkbox for each role -->
                                        <input id="role<%= role.id %>" type="checkbox" class="form-check-input" 
                                               name="roles[]" value="<%= role.id %>" 
                                               <%= userInfo.roles.some(rol => rol.id === role.id) ? "checked" : "" %>>
                                        <label for="role<%= role.id %>"><%= role.roleName %></label>
                                    </div>
                                <% }) %>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="row mb-3">
                            <div class="col-sm-8 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
