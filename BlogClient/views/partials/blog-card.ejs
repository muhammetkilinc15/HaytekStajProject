<div class="card mb-3">
    <div class="row g-0"> <!-- Gap eklemek için g-0 sınıfı kullanıldı -->
        <div class="col-md-4">
            <img src="<%= blog.imageUrl %>" class="img-fluid rounded-start" alt="<%= blog.title %>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <a style="text-decoration: none; color: inherit;" href="/blogs/<%= blog.url %>"> <!-- inherit renk ile stil korundu -->
                        <%= blog.title %>
                    </a>
                </h5>
                <p class="card-text"><%= blog.subtitle %></p>
                <a href="/blogs/<%= blog.url %>" class="btn btn-primary">Detaylar</a> <!-- Detaylar butonu eklendi -->
            </div>
        </div>
    </div>
</div>
