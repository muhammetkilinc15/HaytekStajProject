<div class="list-group">
    <!-- Eğer selectedCategory null ise "Tüm Kategoriler" butonu aktif olur -->
    <a href="/blogs" class="list-group-item list-group-item-action <%= !selectedCategory ? 'active' : '' %>">Tüm Kategoriler</a>
    
    <% categories.forEach(function(category) { %>
        <a href="/blogs/category/<%= category.url %>" 
            class="list-group-item list-group-item-action <%= selectedCategory === category.url ? 'active' : '' %>"> 
            <%= category.name %>  
        </a>
    <% }) %> 
</div>
